<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_resep_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.istandev.pelatihanandroid2.ResepMenu">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1"
        android:shrinkColumns="0,1">
        <TableRow>
            <FrameLayout
                android:id="@+id/masakan_padang"
                android:layout_margin="20dp"
                android:padding="30dp"
                android:background="@drawable/background3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="Masakan Padang"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/masakan_sunda"
                android:layout_margin="20dp"
                android:padding="30dp"
                android:background="@drawable/background3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="Masakan Sunda"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"/>
            </FrameLayout>
        </TableRow>
        <TableRow>
            <FrameLayout
                android:id="@+id/masakan_jawa"
                android:layout_margin="20dp"
                android:padding="30dp"
                android:background="@drawable/background3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="Masakan Jawa"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/masakan_batak"
                android:layout_margin="20dp"
                android:padding="30dp"
                android:background="@drawable/background3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="Masakan Batak"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"/>
            </FrameLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>
